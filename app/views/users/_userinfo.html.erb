<div class="row">
    <div class="col-md-3">
        <h2>User info</h2>
        <table class="table">
            <tbody>
                <tr></tr>
                <th>name</th>
                <th><p><%= user.name %></p></th>
                 <tr>
                    <th>introduction</th>
                    <th><p><%= user.introduction %></p></th>
                    <%= image_tag user.get_profile_image(100,100) %>
                    <% if user == current_user %>
                    <a href="edit_user_path(@user.id)"></a>
                    <% end %>
                    </div>
                 </tr>
            </tbody>
        </table>
        <div class="row">
            <%= link_to edit_user_path(current_user.id),class:"btn btn-outline-secondary btn-block edit_user" do %>
            <i class="fa-solid fa-user-gear"></i>
            <% end %>
        </div>
        <h2 class="mt-3">New book</h2>
        <%= form_with model: newbook do |f| %>
        <div class="form-group">
            <p>Title</p>
            <%= f.text_field :title %>
        </div>
        <div class="form-group">
            <p>Opinion</p>
            <%= f.text_area :body %>
        </div>
        <div class="form-group">
            <%= f.submit 'Create Book' %>
        </div>
        <% end %>
</div>