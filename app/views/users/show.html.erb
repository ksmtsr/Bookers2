<div><%= flash[:notice] %></div>
<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
  <div class="col-md-3">
  <%= render 'error', book: @newbook %>
  <%= render 'userinfo', user: @user, newbook: @newbook %>
  </div>
 <div class="col-md-8 offset-md-1">
  <h2>Books</h2>
  <table class="table">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @user.books.each do |book| %>
      <tr>
        <td>
          <%= link_to user_path(book.user.id) do %>
          <%= image_tag book.user.get_profile_image(80, 80) %>
          <% end %>
        </td>
        <td>
      <%= link_to book.title, book_path(book.id)  %>
      </td>

      <td><%= book.body %></td>

      </tr>
      <% end %>

    </tbody>
  </table>
  </div>
</div>
</div>
