  <%= @book.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<p id="notice"></p>
<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 mx-auto">
            <h1>Editing Book</h1>
                 <%= form_with model: @book do |f| %>
            <div class="form-group">
              <label for="book_title">Title</label>
                  <p><%= f.text_field :title %></p>
            </div>
            <div class="form-group">
                <label for="user_introduction">Opinion</label>
                  <p><%= f.text_area :body %></p>
            </div>
             <div class="form-group">
                  <%= f.submit 'Update Book' %>
            </div>
                  <% end %>
               <p><%= link_to "Show", book_path(@book) %>
                |
            <%= link_to "Back", books_path %></p>
        </div>
    </div>
</div>